@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <h1>Types</h1>
    @if(@Model.Count == 0)
    {
        <h3>No types have been added yet!</h3>
    }
    @foreach (TypeClass typeClass in Model)
    {
        <h3><a href="/typesClass/@typeClass.Id">@typeClass.Name</a></h3>
    }
    <p><a href="/">Home</a></p>
</body>
</html>