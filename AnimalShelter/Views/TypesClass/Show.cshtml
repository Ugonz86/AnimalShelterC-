<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Show Type List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    @using AnimalShelter.Models;
    <h3>Here are all the animals in this type:</h3>
    <ol>
        @foreach (var detail in @Model["details"])
        {
            <li><a href='/typesClass/@Model["typeClass"].TypeClassId/details/@detail.DetailId'>@detail.Name</a></li>
        }
    </ol>
    <p><a href='/typesClass/@Model["typeClass"].TypeClassId/details/new'>Add a new animal</a></p>
    <p><a href='/typesClass'>Return to types overview</a></p>
    <p><a href='/'>Return to Main Page</a></p>
</body>
</html>