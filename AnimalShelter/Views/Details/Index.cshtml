@using AnimalShelter.Models;

<h1>Animal Shelter</h1>
<!-- Adding Items -->
@if(Model.Count == 0)
{
  <p>There is no info in the list!</p>
}
<ul>
  @foreach(Detail detail in Model)
  {
    <li>
      <a href="/details/@detail.Id">
        @detail.Name
      </a>
    </li>
  }

</ul>
<a href="/details/new"> Add a new info.</a>

<!-- deleting details -->
<form action="/details/delete" method="post">
  <button type="submit" name="button">Clear All Info</button>
</form>